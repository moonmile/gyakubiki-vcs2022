<Window x:Class="db332.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:db332"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Content="検索" 
                Click="clickSearch" Margin="2" Width="80" HorizontalAlignment="Right" />
        <DataGrid 
            x:Name="dg"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            Grid.Row="1" Margin="4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="タイトル" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="著者" Binding="{Binding Author}" Width="*"/>
                <DataGridTextColumn Header="価格" Binding="{Binding Price}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
