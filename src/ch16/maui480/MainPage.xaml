<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui480.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Label 
                Text="GPSの利用"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button 
                Text="取得"
                FontAttributes="Bold"
                Clicked="OnClicked"
                HorizontalOptions="Center" />

            <Label 
                Text="Latitude: 0"
                FontSize="18"
                FontAttributes="Bold"
                x:Name="labelLatitude"
                HorizontalOptions="Center" />
            <Label 
                Text="Longitude: 0"
                FontSize="18"
                FontAttributes="Bold"
                x:Name="labelLongitude"
                HorizontalOptions="Center" />
            <Label 
                Text="Altitude: 0"
                FontSize="18"
                FontAttributes="Bold"
                x:Name="labelAltitude"
                HorizontalOptions="Center" />


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
