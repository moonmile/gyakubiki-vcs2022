<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui479.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Label 
                Text="加速度を取得"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button 
                Text="開始"
                FontAttributes="Bold"
                Clicked="OnClicked"
                HorizontalOptions="Center" />

            <Label 
                Text="X: 0"
                FontSize="18"
                FontAttributes="Bold"
                x:Name="labelX"
                HorizontalOptions="Center" />
            <Label 
                Text="Y: 0"
                FontSize="18"
                FontAttributes="Bold"
                x:Name="labelY"
                HorizontalOptions="Center" />
            <Label 
                Text="Z: 0"
                FontSize="18"
                FontAttributes="Bold"
                x:Name="labelZ"
                HorizontalOptions="Center" />


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
